<div class="container mx-auto p-8">
  <%= link_to "View analytics", analytics_terms_path(period: "7d"),
              class: "text-sm font-medium" %>

  <div class="flex items-center justify-between mb-6">
    <h1 class="text-2xl font-bold">Realtime Article Search</h1>
  </div>

  <input id="search-input" type="text" placeholder="Type to search..."
         class="border px-3 py-2 w-full mb-4" autofocus />

  <ul id="results" class="space-y-2"></ul>

  <%= javascript_import_module_tag "search" %>
</div>
